{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "types": [
      "jest", "@testing-library/jest-dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.test.*",
    "src/**/tests/**/*",
    "src/**/__tests__/**/*",
    "src/**/*.stories.*",
    "src/**/*.mockdata.*",
    "src/**/__testfixtures__/**"
  ]
}
